<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="chris.myapplication.GameInfoActivity"
            android:orientation="vertical">

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHomeGameInfo"
            android:gravity="center"
            android:textSize="@dimen/scoring_play_button_text_size"
            android:layout_weight="1"
            android:padding="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAwayGameInfo"
            android:gravity="center"
            android:textSize="@dimen/scoring_play_button_text_size"
            android:layout_weight="1"
            android:padding="8dp"/>

    </TableRow>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutScoringPlays"
        android:orientation="vertical"/>

    </ScrollView>


</LinearLayout>